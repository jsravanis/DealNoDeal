<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/chooseCaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deal_no_deal_logo" />

    <ImageView
        android:id="@+id/box1"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseCaseText"
        app:srcCompat="@drawable/suitcase_position_1" />

    <ImageView
        android:id="@+id/box2"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/box1"
        app:layout_constraintTop_toTopOf="@+id/box1"
        app:srcCompat="@drawable/suitcase_position_2" />

    <ImageView
        android:id="@+id/box3"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box1"
        app:layout_constraintTop_toBottomOf="@+id/box1"
        app:srcCompat="@drawable/suitcase_position_3" />

    <ImageView
        android:id="@+id/box4"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box2"
        app:layout_constraintTop_toBottomOf="@+id/box2"
        app:srcCompat="@drawable/suitcase_position_4" />

    <ImageView
        android:id="@+id/box5"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box3"
        app:layout_constraintTop_toBottomOf="@+id/box3"
        app:srcCompat="@drawable/suitcase_position_5" />

    <ImageView
        android:id="@+id/box6"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box4"
        app:layout_constraintTop_toBottomOf="@+id/box4"
        app:srcCompat="@drawable/suitcase_position_6" />

    <ImageView
        android:id="@+id/box8"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box6"
        app:layout_constraintTop_toBottomOf="@+id/box6"
        app:srcCompat="@drawable/suitcase_position_8" />

    <ImageView
        android:id="@+id/box7"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box5"
        app:layout_constraintTop_toBottomOf="@+id/box5"
        app:srcCompat="@drawable/suitcase_position_7" />

    <ImageView
        android:id="@+id/box9"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box7"
        app:layout_constraintTop_toBottomOf="@+id/box7"
        app:srcCompat="@drawable/suitcase_position_9" />

    <ImageView
        android:id="@+id/box10"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/box8"
        app:layout_constraintTop_toBottomOf="@+id/box8"
        app:srcCompat="@drawable/suitcase_position_10" />

    <ImageView
        android:id="@+id/reward1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseCaseText"
        app:srcCompat="@drawable/reward_1" />

    <ImageView
        android:id="@+id/reward2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward1"
        app:layout_constraintTop_toBottomOf="@+id/reward1"
        app:srcCompat="@drawable/reward_10" />

    <ImageView
        android:id="@+id/reward3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward2"
        app:layout_constraintTop_toBottomOf="@+id/reward2"
        app:srcCompat="@drawable/reward_50" />

    <ImageView
        android:id="@+id/reward6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward5"
        app:layout_constraintTop_toBottomOf="@+id/reward5"
        app:srcCompat="@drawable/reward_1000" />

    <ImageView
        android:id="@+id/reward5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward4"
        app:layout_constraintTop_toBottomOf="@+id/reward4"
        app:srcCompat="@drawable/reward_300" />

    <ImageView
        android:id="@+id/reward4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward3"
        app:layout_constraintTop_toBottomOf="@+id/reward3"
        app:srcCompat="@drawable/reward_100" />

    <ImageView
        android:id="@+id/reward7"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward6"
        app:layout_constraintTop_toBottomOf="@+id/reward6"
        app:srcCompat="@drawable/reward_10000" />

    <ImageView
        android:id="@+id/reward8"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward7"
        app:layout_constraintTop_toBottomOf="@+id/reward7"
        app:srcCompat="@drawable/reward_50000" />

    <ImageView
        android:id="@+id/reward9"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward8"
        app:layout_constraintTop_toBottomOf="@+id/reward8"
        app:srcCompat="@drawable/reward_100000" />

    <ImageView
        android:id="@+id/reward10"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/reward9"
        app:layout_constraintTop_toBottomOf="@+id/reward9"
        app:srcCompat="@drawable/reward_500000" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/reset_button_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dealButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/deal_button_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/noDealButton" />

    <Button
        android:id="@+id/noDealButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/no_deal_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dealButton"
        app:layout_constraintTop_toBottomOf="@+id/box10" />

</androidx.constraintlayout.widget.ConstraintLayout>